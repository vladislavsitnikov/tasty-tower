---
export interface Props {
  title: string;
  content: string[];
}

const { title, content } = Astro.props;
---

<div class="linc_item">
  <div class="linc_two_btn">
    <h2>{title}</h2>
    <br />
    <br />
    {content.map((paragraph, index) => <p key={index}>{paragraph}</p>)}
  </div>
</div>

<style>
  .linc_one_logo {
    font-weight: 700;
    font-size: 3rem;
    line-height: 1.4;
    letter-spacing: 0px;
    text-align: center;
    padding-bottom: 20px;
  }
  .linc_two {
    display: flex;
    justify-content: space-around;
    flex-wrap: wrap;
    width: 100%;
  }
  .linc_item {
    width: 520px;
    padding: 10px;
    border-radius: 30px;
    box-shadow:
      #ff9451 10px 5px 2px 5px,
      #ff9451 10px 5px 3px 6px;
    display: flex;
    flex-direction: column;
    align-items: center;
    background: linear-gradient(70deg, #ed9ae0, #ff8788);
    margin: 10px 0;
  }
  @media (max-width: 550px) {
    .linc_item {
      width: 330px;
    }
  }
</style>
